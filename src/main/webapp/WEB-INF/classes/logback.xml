<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="FileAppender" class="ch.qos.logback.core.FileAppender">
        <file>debug.log</file>
        <append>true</append>

        <encoder>
            <pattern>%d{ISO8601} [%-5p] [%-16.16t] [%40.40c{-4}] - %m%n</pattern>
        </encoder>

    </appender>

    <appender name="FileAppenderForInfo" class="ch.qos.logback.core.FileAppender">
        <file>info.log</file>
        <append>true</append>

        <encoder>
            <pattern>%d{ISO8601} [%-5p] [%-16.16t] [%40.40c{-4}] - %m%n</pattern>
        </encoder>
    </appender>


    <root level="debug">
        <appender-ref ref="FileAppender" />
    </root>

    <root level="info">
        <appender-ref ref="FileAppenderForInfo"/>
    </root>

</configuration>